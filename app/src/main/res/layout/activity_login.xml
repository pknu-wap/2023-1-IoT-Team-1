<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginTopLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/LoginMiddleLayout"
        app:layout_constraintVertical_weight="2">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LoginTop_UpperLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/LoginTop_LowerLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.75">

            <TextView
                android:id="@+id/LoginTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="제목"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent
"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LoginTop_LowerLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/LoginTop_UpperLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="0.12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginTop_Lower_StartMarginLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/LoginTop_Lower_IPLayout"
                app:layout_constraintHorizontal_weight="0.17">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginTop_Lower_IPLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toStartOf="@id/LoginTop_Lower_MidMarginLayout"
                app:layout_constraintHorizontal_weight="0.45"
                app:layout_constraintStart_toEndOf="@id/LoginTop_Lower_StartMarginLayout"
                tools:layout_editor_absoluteY="0dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginTop_Lower_MidMarginLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/LoginTop_Lower_IPLayout"
                app:layout_constraintEnd_toStartOf="@id/LoginTop_Lower_StayLayout"
                app:layout_constraintHorizontal_weight="0.2">

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginTop_Lower_StayLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/LoginTop_Lower_MidMarginLayout"
                app:layout_constraintEnd_toStartOf="@id/LoginTop_Lower_EndMarginLayout"
                app:layout_constraintHorizontal_weight="0.8"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginTop_Lower_EndMarginLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/LoginTop_Lower_StayLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="0.17">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginMiddleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/LoginTopLayout"
        app:layout_constraintBottom_toTopOf="@id/LoginBottomLayout"
        app:layout_constraintVertical_weight="2">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LoginMiddle_StartMarginLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/LoginMiddle_MidMarginLayout"
            app:layout_constraintHorizontal_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LoginMiddle_MidMarginLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/LoginMiddle_StartMarginLayout"
            app:layout_constraintEnd_toStartOf="@id/LoginMiddle_EndMarginLayout"
            app:layout_constraintHorizontal_weight="9">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_IdBlockLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_IdMarginLayout"
                app:layout_constraintVertical_weight="1.8">


                <ImageView
                    android:id="@+id/IDimageview"
                    android:layout_width="335dp"
                    android:layout_height="46dp"
                    android:src="@drawable/rectangle1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editId"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="아이디"
                    android:textColor="#ADB5BD"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_IdMarginLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_IdBlockLayout"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_PwBlockLayout"
                app:layout_constraintVertical_weight="0.3">


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_PwBlockLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_IdMarginLayout"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_PwMarginLayout"
                app:layout_constraintVertical_weight="1.8">

                <ImageView
                    android:id="@+id/Passwordimageview"
                    android:layout_width="335dp"
                    android:layout_height="46dp"
                    android:src="@drawable/rectangle1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"
                    android:text="비밀번호"
                    android:textColor="#ADB5BD"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_PwMarginLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_PwBlockLayout"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_LiBlockLayout"
                app:layout_constraintVertical_weight="0.3">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_LiBlockLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_PwMarginLayout"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_LiMarginLayout"
                app:layout_constraintVertical_weight="1.8">

                <ImageView
                    android:id="@+id/loginImageView"
                    android:layout_width="335dp"
                    android:layout_height="46dp"
                    android:src="@drawable/rectangle2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/loginTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_LiMarginLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_LiBlockLayout"
                app:layout_constraintBottom_toTopOf="@id/LoginMiddle_MidMargin_JiBlockLayout"
                app:layout_constraintVertical_weight="0.8">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="333dp"
                    android:layout_height="15dp"
                    android:src="@drawable/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/LoginMiddle_MidMargin_JiBlockLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/LoginMiddle_MidMargin_LiMarginLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1.8">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="335dp"
                    android:layout_height="46dp"
                    android:src="@drawable/rectangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/joinTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LoginMiddle_EndMarginLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/LoginMiddle_MidMarginLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1">

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/LoginMiddleLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="2">




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

